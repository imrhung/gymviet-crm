<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:id="@+id/scan_button" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Scan" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Scan Result"
		android:textColor="#fff" />
	<TextView android:id="@+id/scan_result" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<TextView
	    android:id="@+id/tvUserName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Medium Text"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
